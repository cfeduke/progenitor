type service struct {
}

func (s *service) Ping(ctx context.Context, in *pb.PingRequest) (*pb.PingResponse, error) {
    l.Printf("Received: %v", in.Data)
    resp := "Data: " + in.Data
    {{if .UseDB}}
    if err := store.Ping(); err != nil {
      return &pb.PingResponse{Data: resp+"; Database: down"}, nil
    } else {
      return &pb.PingResponse{Data: resp +"; Database: up"}, nil
    }
    {{else}}
    return &pb.PingResponse{Data: resp}, nil
    {{end}}
}