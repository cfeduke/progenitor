version: "3.7"
services:
  {{tostring .Name}}:
    build:
      context: .
      dockerfile: Dockerfile.dev
      args:
        DOCKER_GIT_CREDENTIALS: ${DOCKER_GIT_CREDENTIALS}
        APP_PORT: ${PORT}
    image: {{tolower .Name}}:latest
    depends_on:
      - {{tostring .Name}}db
    volumes:
      - ./:/root/app
    env_file:
      - .env
    ports:
      - ${HOST_PORT}:${PORT}
  productsdb:
    image: mysql:latest
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: ${DB_ROOT_PWD}
      MYSQL_USER: ${DB_USER}
      MYSQL_PASSWORD: ${DB_PWD}
      MYSQL_DATABASE: ${DB_SCHEMA}
    ports:
      - ${DB_HOST_PORT}:3306
