-- Setup schema
-- The default COLLATE for utm8mb4 is utf8mb4_0900_ai_ci. No need to be explicit.
CREATE SCHEMA IF NOT EXISTS {{tolower .DBModel}} CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci;

-- Switch to using products schema
USE {{tolower .DBModel}};


-- Create Tables
CREATE TABLE {{tolower .DBModel}}s (
    {{tolower .DBModel}}_id         BINARY(16) NOT NULL PRIMARY KEY,
    name           VARCHAR(320),
    deleted_at DATETIME
)
ENGINE=InnoDB
DEFAULT CHARSET=utf8mb4;